<script type="text/javascript">
  var loaddata = function (url) {
    // Create script tag:
    var script = $('<script>');

    // Set the src attribute:
    script.attr('src', url);

    // Append (load) the script:
    $('body').append(script);
  };

  $('#get').bind('click',
    function (event) {

      // Load the "data":
      //loaddata('data.js');

      // Get the id to display:
      var id   = $('textarea').val();

      // Display data after 300 ms:
      setTimeout(function () {
    var value = '-1';
    
    <% for(var i = 0; i < allUsers.length; i++) { %>
      if('<%= allUsers[i].username %>'.indexOf(id) > -1){
        if(value == '-1'){
          value = '<h1>Search Results</h1> <hr><a href="/users/<%= allUsers[i].username %>"><%= allUsers[i].username %></a>';
        }
        else{
          value = value + '<br><a href="/users/<%= allUsers[i].username %>"><%= allUsers[i].username %></a>';
        }
      }
        <% } %>
    
    if(value == '-1'){
      value = 'User Not Found';
    }
    
    $('#output').html(value + '<br><br>');
    
      }, 300);
      return false;
    });
</script>




